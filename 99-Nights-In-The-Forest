local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

-- Настройки темы
WindUI.TransparencyValue = 0.15 -- Легкая прозрачность для стиля
WindUI:SetTheme("Dark")

-- Цветовая палитра (неоновая сине-голубая тема)
local COLOR_PALETTE = {
    Primary = Color3.fromHex("#24ffed"),  -- Основной неоновый голубой
    Secondary = Color3.fromHex("#000c63"), -- Темно-синий
    Accent = Color3.fromHex("#30ff6a"),   -- Неоновый зеленый для тегов
    Dark = Color3.fromHex("#0a0a1a"),     -- Очень темный синий
    Text = Color3.fromHex("#e0e0ff")      -- Светлый текст
}

-- Функция градиента с новой палитрой
local function gradient(text, startColor, endColor)
    local result = ""
    for i = 1, #text do
        local t = (i - 1) / (#text - 1)
        local r = math.floor((startColor.R + (endColor.R - startColor.R) * t) * 255)
        local g = math.floor((startColor.G + (endColor.G - startColor.G) * t) * 255)
        local b = math.floor((startColor.B + (endColor.B - startColor.B) * t) * 255)
        result = result .. string.format('<font color="rgb(%d,%d,%d)">%s</font>', r, g, b, text:sub(i, i))
    end
    return result
end

-- Создание окна с улучшенным дизайном
local Window = WindUI:CreateWindow({
    Title = gradient("SNT HUB", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Icon = "infinity",
    Author = gradient("99 Nights in the Forest", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Folder = "SNT_HUB",
    Size = UDim2.fromOffset(450, 180), -- Немного увеличен для лучшего отображения
    Theme = "Dark",
    Background = WindUI:Gradient({
        ["0"] = { Color = COLOR_PALETTE.Dark, Transparency = 0 },
        ["50"] = { Color = COLOR_PALETTE.Secondary, Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#000000"), Transparency = 0 },
    }, {
        Rotation = 150, -- Более плавный угол градиента
    }),
    User = {
        Enabled = true,
        Anonymous = false,
        Username = "Snowt_Scripter",
        UserTag = "@Snowt_Scripter",
        Callback = function()
            WindUI:Notify({
                Title = "User Profile",
                Content = "Telegram: @Snowt_TG",
                Duration = 3
            })
        end
    },
    SideBarWidth = 200, -- Оптимально для мобильных
    ScrollBarEnabled = true,
    CornerRadius = UDim.new(0, 14), -- Закругление углов
    DropShadow = true -- Тень для глубины
})

-- Стилизованный тег Beta
Window:Tag({
    Title = "BETA",
    Color = COLOR_PALETTE.Accent,
    TextColor = Color3.fromHex("#000000"), -- Черный текст для контраста
    CornerRadius = UDim.new(0, 6)
})

-- Секции с улучшенным дизайном
local Tabs = {
    Main = Window:Section({ 
        Title = gradient("MAIN", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = true 
    }),
    Autofarm = Window:Section({ 
        Title = gradient("AUTOFARM", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = false 
    }),
    Esp = Window:Section({ 
        Title = gradient("ESP", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = false 
    })
}

-- Кнопка переключения темы в топбаре
Window:CreateTopbarButton("theme-switcher", "moon", function()
    WindUI:SetTheme(WindUI:GetCurrentTheme() == "Dark" and "Light" or "Dark")
    WindUI:Notify({
        Title = "Theme Changed",
        Content = "Current theme: "..WindUI:GetCurrentTheme(),
        Duration = 2
    })
end, 990)