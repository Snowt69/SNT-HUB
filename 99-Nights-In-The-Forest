local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

-- Настройки темы
WindUI.TransparencyValue = 0.15
WindUI:SetTheme("Dark")

-- Цветовая палитра (неоновая сине-голубая тема)
local COLOR_PALETTE = {
    Primary = Color3.fromHex("#24ffed"),  -- Основной неоновый голубой
    Secondary = Color3.fromHex("#000c63"), -- Темно-синий
    Accent = Color3.fromHex("#30ff6a"),   -- Неоновый зеленый
    Dark = Color3.fromHex("#0a0a1a"),     -- Очень темный синий
    Text = Color3.fromHex("#e0e0ff"),     -- Светлый текст
    Danger = Color3.fromHex("#ff3e3e")    -- Для опасных действий
}

-- Функция градиента
local function gradient(text, startColor, endColor)
    local result = ""
    for i = 1, #text do
        local t = (i - 1) / (#text - 1)
        local r = math.floor((startColor.R + (endColor.R - startColor.R) * t) * 255)
        local g = math.floor((startColor.G + (endColor.G - startColor.G) * t) * 255)
        local b = math.floor((startColor.B + (endColor.B - startColor.B) * t) * 255)
        result = result .. string.format('<font color="rgb(%d,%d,%d)">%s</font>', r, g, b, text:sub(i, i))
    end
    return result
end

-- Создание окна
local Window = WindUI:CreateWindow({
    Title = gradient("SNT HUB", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Icon = "infinity",
    Author = gradient("99 Nights in the Forest", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Folder = "SNT_HUB",
    Size = UDim2.fromOffset(450, 180),
    Theme = "Dark",
    Background = WindUI:Gradient({
        ["0"] = { Color = COLOR_PALETTE.Dark, Transparency = 0 },
        ["50"] = { Color = COLOR_PALETTE.Secondary, Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#000000"), Transparency = 0 },
    }, {
        Rotation = 150,
    }),
    User = {
        Enabled = true,
        Anonymous = false,
        Username = "Snowt_Scripter",
        UserTag = "@Snowt_Scripter",
        Callback = function()
            WindUI:Notify({
                Title = "User Profile",
                Content = "Telegram: @Snowt_TG",
                Duration = 3
            })
        end
    },
    SideBarWidth = 200,
    ScrollBarEnabled = true,
    CornerRadius = UDim.new(0, 14),
    DropShadow = true
})

-- Секции
local Tabs = {
    Main = MainTab:Section({ 
        Title = gradient("MAIN", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = true 
    }),
    Autofarm = AutofarmTab:Section({ 
        Title = gradient("AUTOFARM", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = true 
    }),
    Esp = EspTab:Section({ 
        Title = gradient("ESP", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
        Opened = true 
    })
}
-- Табы
local WindowTabs = {
    MainTab = Window:Tab({ Title = "Tab Title", Icon = "bird", Locked = false, }),
    AutofarmTab = Window:Tab({ Title = "Tab Title", Icon = "bird", Locked = false, }),
    EspTab = Window:Tab({ Title = "Tab Title", Icon = "bird", Locked = false, }),
    CombatTab = Window:Tab({ Title = "Tab Title", Icon = "bird", Locked = false, }),
    SettingsTab = Window:Tab({ Title = "Tab Title", Icon = "bird", Locked = false, }),
    
}

-- Стилизованный переключатель
local mainToggle = Tabs.Main:Toggle({
    Title = gradient("Enable HUB", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Activate all SNT HUB features",
    Value = false,
    Callback = function(state)
        WindUI:Notify({
            Title = "HUB Status",
            Content = state and "HUB Activated" or "HUB Deactivated",
            Icon = state and "check" or "x",
            Duration = 2
        })
    end
})

-- Слайдер с градиентным оформлением
Tabs.Main:Slider({
    Title = gradient("Render Distance", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Adjust object visibility range",
    Value = { Min = 0, Max = 1000, Default = 500 },
    Callback = function(value)
        print("Render distance set to:", value)
    end
})

-- Выпадающий список
Tabs.Main:Dropdown({
    Title = gradient("Quality Preset", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Values = { "Low", "Medium", "High", "Ultra" },
    Value = "Medium",
    Callback = function(option)
        WindUI:Notify({
            Title = "Quality Changed",
            Content = "Selected: "..option,
            Icon = "sliders",
            Duration = 2
        })
    end
})

Tabs.Main:Divider()

-- Кнопка с градиентным текстом
Tabs.Main:Button({
    Title = gradient("Activate All Features", COLOR_PALETTE.Primary, COLOR_PALETTE.Accent),
    Icon = "zap",
    Callback = function()
        mainToggle:Set(true)
        WindUI:Notify({
            Title = "All Features Activated",
            Content = "Enjoy your experience!",
            Icon = "zap",
            Duration = 3
        })
    end
})

-- Примеры элементов в AUTOFARM
Tabs.Autofarm:Paragraph({
    Title = gradient("AUTOFARM MODULE", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Automate your gameplay",
    Image = "refresh-cw",
    ImageSize = 20,
    Color = "White"
})

local autofarmToggle = Tabs.Autofarm:Toggle({
    Title = gradient("Enable Autofarm", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Automatically collect resources",
    Value = false,
    Callback = function(state)
        WindUI:Notify({
            Title = "Autofarm",
            Content = state and "Autofarm Enabled" or "Autofarm Disabled",
            Icon = state and "check-circle" or "x-circle",
            Duration = 2
        })
    end
})

Tabs.Autofarm:Slider({
    Title = gradient("Farm Speed", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Adjust farming speed multiplier",
    Value = { Min = 1, Max = 10, Default = 3 },
    Callback = function(value)
        print("Farm speed set to:", value.."x")
    end
})

-- Примеры элементов в ESP
Tabs.Esp:Paragraph({
    Title = gradient("ESP MODULE", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Visual enhancements",
    Image = "eye",
    ImageSize = 20,
    Color = "White"
})

local espToggle = Tabs.Esp:Toggle({
    Title = gradient("Enable ESP", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Show hidden objects and players",
    Value = false,
    Callback = function(state)
        WindUI:Notify({
            Title = "ESP",
            Content = state and "ESP Enabled" or "ESP Disabled",
            Icon = state and "eye" or "eye-off",
            Duration = 2
        })
    end
})

Tabs.Esp:Colorpicker({
    Title = gradient("ESP Color", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Select color for ESP highlights",
    Default = COLOR_PALETTE.Primary,
    Callback = function(color)
        WindUI:Notify({
            Title = "ESP Color Changed",
            Content = "New color: "..color:ToHex(),
            Icon = "palette",
            Duration = 2
        })
    end
})

-- Кнопка переключения темы
Window:CreateTopbarButton("theme-switcher", "moon", function()
    WindUI:SetTheme(WindUI:GetCurrentTheme() == "Dark" and "Light" or "Dark")
    WindUI:Notify({
        Title = "Theme Changed",
        Content = "Current theme: "..WindUI:GetCurrentTheme(),
        Duration = 2
    })
end, 990)

-- Футер с информацией
local footer = Window:Section({ Title = "SNT HUB v1.0" })
footer:Paragraph({
    Title = gradient("Created by Snowt_Scripter", COLOR_PALETTE.Primary, COLOR_PALETTE.Text),
    Desc = "Telegram: @Snowt_TG",
    Image = "user",
    ImageSize = 20,
    Color = "Grey"
})